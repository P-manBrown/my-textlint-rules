{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 60
      }
    },
    "no-mixed-zenkaku-and-hankaku-alphabet": true,
    "textlint-rule-max-length-of-title": {
      "#": 30,
      "##": 30,
      "###": 30,
      "####": 30
    }
  },
  "plugins": {
    "@textlint/text": true,
    "@textlint/markdown": true
  }
}
